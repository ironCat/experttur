---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {title && <title>{title}</title>}
  </head>
  <body class="m-0 min-h-screen w-full bg-[hsl(var(--background))] text-[hsl(var(--foreground))]">
    <div class="mx-auto flex min-h-screen max-w-6xl flex-col px-4 py-6 gap-6">
      <header class="flex items-center justify-between gap-4 border-b border-[hsl(var(--border))] pb-4">
        <slot name="header" />
      </header>

      <div class="flex flex-1 flex-col gap-6 md:flex-row">
        <!-- Left sidebar -->
        <aside class="md:w-60 md:shrink-0 space-y-4 md:border-r md:border-[hsl(var(--border))] md:pr-4">
          <slot name="sidebar-left" />
        </aside>

        <!-- Main content -->
        <main class="flex-1 space-y-6 md:px-4">
          <slot />
        </main>

        <!-- Right sidebar -->
        <aside class="md:w-72 md:shrink-0 space-y-4 md:border-l md:border-[hsl(var(--border))] md:pl-4">
          <slot name="sidebar-right" />
        </aside>
      </div>

      <footer class="border-t border-[hsl(var(--border))] pt-4 text-xs text-[hsl(var(--muted-foreground))]">
        <slot name="footer" />
      </footer>
    </div>
  </body>
</html>
